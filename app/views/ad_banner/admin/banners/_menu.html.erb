<h2><%= menu_header @content.name, AdBanner::Banner.model_name.human %></h2>

<div class="actionMenu">
  <%= action_menu :new %>
  <%= action_menu :index %>
  <%= action_menu :show %>
  <%= action_menu :edit if @item.try(:editable?) %>
  <%= action_menu :destroy if @item.try(:deletable?) %>

  <%- if action_name == 'index' -%>
    <span class="separator"></span>
    <%= link_to 'すべて', { content: @content }, class: "#{'current' if params[:target].blank? }" %>
    <%= link_to '下書き', { content: @content, target: 'draft' }, class: "#{'current' if params[:target] == 'draft' }" %>
    <%= link_to '公開中', { content: @content, target: 'public' }, class: "#{'current' if params[:target] == 'public' }" %>
    <%= link_to '非公開', { content: @content, target: 'closed' }, class: "#{'current' if params[:target] == 'closed' }" %>
  <%- end -%>
  <%- if action_name == 'show' -%>
    <%= link_to '公開', { do: :publish }, confirm: '公開してよろしいですか？' if @item.state != 'public' %>
    <%= link_to '非公開', { do: :close }, confirm: '非公開にしてよろしいですか？' if @item.state == 'public' %>
  <%- end -%>
</div>
